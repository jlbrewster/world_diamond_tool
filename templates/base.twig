              <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
              <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
            <![endif]-->
            <!-- Custom World Diamond and legacy styles -->
            <link href="../styles/menu_h2.css" rel="stylesheet" type="text/css">
        {% endblock %}
    </head>
    <body>
    	<div class="content clearfix">
    	    <div class="center_box clearfix">
            {% block marquee %}
    	        {% include '_homeMarquee.html' %}
            {% endblock %}                
            {% block menu %}
    	        {% include '_menu.html' %}
            {% endblock %}

    		    <h1>Manufacturers of Diamond Tools for any industry</h1>
    		    <h2>Standard    |    Special    |    Custom</h2>
    		</div>
         {% block body %}   
        	{% if product == false %}                
        	   {% include '_home_body.html' %}
            {% else %}            
                {% include product ~ '.html' %}
            {% endif %}  
        {% endblock %}   

        </div>
        {% include '_footer.html' %}
    </body>
</html>